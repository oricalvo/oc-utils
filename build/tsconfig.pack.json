{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "inlineSources": true,
    "inlineSourceMap": true,
    "removeComments": false,
    "noImplicitAny": false,
    "declaration": true,
    "outDir": "../build_tmp",
    "lib": ["dom", "es6"],
    "noEmitHelpers": true,
    "importHelpers": true
  },
  "include": [
    "../src/**/*.ts",
    "../bin/**/*.ts"
  ]
}

